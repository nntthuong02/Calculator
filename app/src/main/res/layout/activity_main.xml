<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- TextView để hiển thị kết quả -->
    <TextView
        android:id="@+id/text_result"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="0"
        android:textSize="48sp"
        android:background="#F1EDED"
        android:padding="16dp"
        android:textColor="#000"
        android:layout_marginBottom="2dp"
        android:gravity="end|center_vertical" />

    <!-- Các hàng nút -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCE"
            android:text="CE"
            style="@style/CalculatorButton"
            android:layout_margin="2dp" />
        <Button
            android:id="@+id/btnC"
            android:text="C"
            style="@style/CalculatorButton"
            android:background="@color/calculatorButtonTextColor"
            android:layout_margin="2dp" />
        <Button
            android:id="@+id/btnBS"
            android:text="BS"
            style="@style/CalculatorButton"
            android:background="#E0E0E0"
            android:layout_margin="2dp" />
        <Button
            android:id="@+id/btnDiv"
            android:text="/"
            style="@style/CalculatorButton"
            android:background="#E0E0E0"
            android:layout_margin="2dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn7"
            android:text="7"
            style="@style/CalculatorButton"
            android:background="#77DD2C"
            android:layout_margin="2dp" />
        <Button
            android:id="@+id/btn8"
            android:text="8"
            style="@style/CalculatorButton"
            android:background="#E0E0E0"
            android:layout_margin="2dp" />
        <Button
            android:id="@+id/btn9"
            android:text="9"
            style="@style/CalculatorButton"
            android:background="#E0E0E0"
            android:layout_margin="2dp" />
        <Button
            android:id="@+id/btnMul"
            android:text="x"
            style="@style/CalculatorButton"
            android:background="#E0E0E0"
            android:layout_margin="2dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn4"
            android:text="4"
            style="@style/CalculatorButton"
            android:background="#E0E0E0"
            android:layout_margin="2dp" />
        <Button
            android:id="@+id/btn5"
            android:text="5"
            style="@style/CalculatorButton"
            android:background="#E0E0E0"
            android:layout_margin="2dp" />
        <Button
            android:id="@+id/btn6"
            android:text="6"
            style="@style/CalculatorButton"
            android:background="#E0E0E0"
            android:layout_margin="2dp" />
        <Button
            android:id="@+id/btnSub"
            android:text="-"
            style="@style/CalculatorButton"
            android:background="#E0E0E0"
            android:layout_margin="2dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn1"
            android:text="1"
            style="@style/CalculatorButton"
            android:background="#E0E0E0"
            android:layout_margin="2dp" />
        <Button
            android:id="@+id/btn2"
            android:text="2"
            style="@style/CalculatorButton"
            android:background="#E0E0E0"
            android:layout_margin="2dp" />
        <Button
            android:id="@+id/btn3"
            android:text="3"
            style="@style/CalculatorButton"
            android:background="#E0E0E0"
            android:layout_margin="2dp" />
        <Button
            android:id="@+id/btnAdd"
            android:text="+"
            style="@style/CalculatorButton"
            android:background="#E0E0E0"
            android:layout_margin="2dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnNegate"
            android:text="+/-"
            style="@style/CalculatorButton"
            android:background="#811212"
            android:layout_margin="2dp" />
        <Button
            android:id="@+id/btn0"
            android:text="0"
            style="@style/CalculatorButton"
            android:background="#F1EBEB"
            android:layout_margin="2dp" />
        <Button
            android:id="@+id/btnDot"
            android:text="."
            style="@style/CalculatorButton"
            android:background="#E0E0E0"
            android:layout_margin="2dp" />
        <Button
            android:id="@+id/btnEqual"
            android:text="="
            style="@style/CalculatorButton"
            android:background="#E0E0E0"
            android:layout_margin="2dp" />
    </LinearLayout>

</LinearLayout>
